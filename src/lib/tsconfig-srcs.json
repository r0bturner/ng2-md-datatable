{
  "angularCompilerOptions": {
    "genDir": "../../dist/ng2-md-datatable",
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "debug": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "paths": {
      "@angular/core": [
        "node_modules/@angular/core"
      ],
      "rxjs/*": [
        "node_modules/rxjs/*"
      ]
    },
    "rootDir": ".",
    "outDir": "../../dist/ng2-md-datatable",
    "target": "es5",
    "typeRoots": [
      "../../node_modules/@types"
    ]
  },
  "exclude": [
    "**/*.spec.*",
    "system-config-spec.ts"
  ]
}
